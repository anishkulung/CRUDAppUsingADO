@model IEnumerable<StudentInformation>
@{
    Layout = "_Layout";
    var title = "Student Information";
    ViewData["Title"] = title;
}

<h2>@title</h2>
<h3><a asp-action="Create" class="btn btn-sm btn-secondary">Create</a></h3>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr><th>Id</th><th>Name</th><th>Batch</th><th>Faculty</th><th>Address</th><th>Phone Number</th><th>Update</th><th>Delete</th></tr>
    </thead>
    <tbody>
        @if (Model == null) {
            <tr><td colspan="7" class="text-center">No Model Data</td></tr>
        }
        else {
            @foreach (var p in Model) {
    <tr>
        <td>@p.Id</td>
        <td>@p.FullName</td>
        <td>@p.Batch</td>
        <td>@p.Faculty</td>
        <td>@p.Address</td>
        <td>@p.PhoneNumber</td>
        <td><a asp-action="Update" asp-route-id="@p.Id">Update</a></td>
        <td><a asp-action="Delete" asp-route-id="@p.Id">Delete</a></td>
        @*<td>
            <form asp-action="Delete" asp-route-id="@p.Id">
                <button>Delete</button>
            </form>
        </td>*@
    </tr>
            }
        }
    </tbody>
</table>
